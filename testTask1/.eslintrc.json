{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["standard-with-typescript"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json", // Ruta a tu archivo tsconfig.json
    "tsconfigRootDir": "./"
  },
  "rules": {
    "indent": "warn",
    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": true
      }
    ],
    "no-throw-literal": 0,
    "object-property-newline": 0,
    "prefer-promise-reject-errors": 0,
    "max-params": [
      "error",
      3
    ],
    "camelcase": 0
  },
  "parser": "@typescript-eslint/parser"
}
